{
  "manifest_version": 3,
  "name": "LAAS Summarizer & Explainer",
  "version": "1.0",
  "description": "Summarize long text, visualize insights, and explain in a simple way. Powered by LAAS.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
